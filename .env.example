# SkillSync AI Platform Environment Variables

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///skillsync.db

# OpenAI API Configuration (optional for basic functionality)
OPENAI_API_KEY=your-openai-api-key-here

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Railway Configuration
PORT=5000

# File Organizer Configuration
ORGANIZER_BASE_DIR=C:\Users\%USERNAME%\Documents\SkillSync
AUTO_ORGANIZE=true
CREATE_DATE_SUBFOLDERS=true
LOG_OPERATIONS=true
