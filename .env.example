# SkillSync AI Platform Environment Variables

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///skillsync.db

# OpenAI API Configuration (optional for basic functionality)
OPENAI_API_KEY=your-openai-api-key-here

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Railway Configuration
PORT=5000

# File Organizer Configuration
ORGANIZER_BASE_DIR=C:\Users\%USERNAME%\Documents\SkillSync
AUTO_ORGANIZE=true
CREATE_DATE_SUBFOLDERS=true
LOG_OPERATIONS=true

# ============================================================================
# AI SERVICES
# ============================================================================
XAI_API_KEY=your_xai_grok_api_key_here

# ============================================================================
# MODEL CONTEXT PROTOCOL (MCP) CONFIGURATION
# ============================================================================

# Brave Search API for real-time market intelligence
BRAVE_API_KEY=your_brave_search_api_key_here

# GitHub API for developer profile analysis
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# LinkedIn API for professional network insights
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Custom MCP Services
MCP_MEMORY_ENABLED=true
MCP_WEB_SEARCH_ENABLED=true
MCP_GITHUB_ANALYSIS_ENABLED=true
MCP_TIME_ANALYTICS_ENABLED=true

# ============================================================================
# JOB BOARD INTEGRATIONS & AFFILIATE REVENUE
# ============================================================================

# Indeed Publisher API (for job search and affiliate tracking)
# Sign up at: https://ads.indeed.com/jobroll/xmlfeed
INDEED_PUBLISHER_ID=your_indeed_publisher_id_here

# LinkedIn API (for professional job matching)
# Apply at: https://developer.linkedin.com/
LINKEDIN_API_KEY=your_linkedin_api_key_here

# ZipRecruiter API (for job aggregation)
# Contact: https://www.ziprecruiter.com/partner
ZIPRECRUITER_API_KEY=your_ziprecruiter_api_key_here

# ============================================================================
# AFFILIATE TRACKING & REVENUE OPTIMIZATION
# ============================================================================

# Indeed Affiliate Configuration
INDEED_AFFILIATE_ID=skillsync_ai
INDEED_COMMISSION_RATE=0.15
INDEED_BASE_COMMISSION=150

# LinkedIn Premium Affiliate
LINKEDIN_AFFILIATE_ID=skillsync_premium
LINKEDIN_COMMISSION_RATE=0.30

# ZipRecruiter Affiliate
ZIPRECRUITER_AFFILIATE_ID=skillsync_zip
ZIPRECRUITER_COMMISSION_RATE=0.20

# Gaming Job Boards (Higher commission rates)
GAMING_COMMISSION_RATE=0.25
GAMING_BASE_COMMISSION=200

# ============================================================================
# REVENUE ANALYTICS & TRACKING
# ============================================================================

# Google Analytics (for conversion tracking)
GOOGLE_ANALYTICS_ID=your_ga_tracking_id_here

# Revenue tracking database
REVENUE_DB_URL=sqlite:///revenue_tracking.db

# ============================================================================
# DEPLOYMENT & SECURITY
# ============================================================================

# Flask configuration
FLASK_ENV=production
SECRET_KEY=your_secret_key_here

# Railway deployment
RAILWAY_STATIC_URL=https://your-app.railway.app
RAILWAY_VOLUME_MOUNT_PATH=/app/data

# ============================================================================
# API RATE LIMITING & OPTIMIZATION
# ============================================================================

# Rate limiting (requests per minute)
INDEED_RATE_LIMIT=60
LINKEDIN_RATE_LIMIT=100
ZIPRECRUITER_RATE_LIMIT=120

# Cache settings (in seconds)
JOB_CACHE_DURATION=300
AFFILIATE_CACHE_DURATION=3600

# ============================================================================
# ACQUISITION & BUSINESS METRICS
# ============================================================================

# Target acquisition metrics
TARGET_MRR=25000
TARGET_ARR=300000
TARGET_USERS=5000

# Commission tracking
COMMISSION_TRACKING_ENABLED=true
REVENUE_REPORTING_ENABLED=true
